@model IEnumerable<WebApp.Controllers.MovieViewModel>

<h1>Movies for @ViewBag.ActorName</h1>

@if (ViewContext.HttpContext.Session.GetString("User") != null)
{
    <a href="@Url.Action("AddMovie", "Actors", new { id = ViewBag.ActorId })" class="btn btn-primary mb-3">Add Movie</a>
}

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
    <tr>
        <th>Title</th>
        <th>Budget</th>
        <th>Popularity</th>
        <th>Homepage</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Title</td>
            <td>@movie.Budget</td>
            <td>@movie.Popularity</td>
            <td>
                @if (!string.IsNullOrEmpty(movie.Homepage))
                {
                    <a href="@movie.Homepage" target="_blank" class="btn btn-link" style="color: #007bff;">
                        <i class="bi bi-house-door"></i> Homepage
                    </a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>